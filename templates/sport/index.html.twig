{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h1>Sports</h1>
        <a href="{{ path('sport_new') }}" class="btn btn-primary mb-2">Add New Sport</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for sport in sports %}
                    <tr>
                        <td>{{ sport.id }}</td>
                        <td>{{ sport.name }}</td>
                        <td>
                            <a href="{{ path('sport_show', {id: sport.id}) }}" class="btn btn-info">Show</a>
                            <a href="{{ path('sport_edit', {id: sport.id}) }}" class="btn btn-warning">Edit</a>
                            <form method="post" action="{{ path('sport_delete', {id: sport.id}) }}" style="display:inline-block;">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sport.id) }}">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
